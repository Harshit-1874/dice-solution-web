---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
  { name: "Twitter", src: Twitter, link: "https://twitter.com" },
];

const links = [
  { name: "About us", href: "#about" },
  { name: "Services", href: "#services" },
  { name: "Use Cases", href: "#cases" },
  { name: "Pricing", href: "#Testimonials" },
  { name: "Blog", href: "#Home" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[55px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
          <a href="#home" class="text-gray hover:text-white transition-colors">
            <svg width="220" height="50" viewBox="0 0 220 50" fill="none" xmlns="http://www.w3.org/2000/svg">
              <!-- Dice icon -->
              <rect x="5" y="10" width="30" height="30" rx="4" fill="#4EE1A0" />
              <circle cx="13" cy="18" r="3" fill="#242424" />
              <circle cx="13" cy="32" r="3" fill="#242424" />
              <circle cx="27" cy="18" r="3" fill="#242424" />
              <circle cx="27" cy="32" r="3" fill="#242424" />
              <!-- Text -->
              <text x="45" y="32" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="#FFFFFF">DICE SOLUTIONS</text>
            </svg>
          </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[66px] mb-[51px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-5 text-center md:text-left text-2xl text-green">Contact us</h3>
            <div class="flex flex-col justify-between gap-4">
              <span> Email: contact@dicesolutions.in </span>
              <span> Phone: +91 8149190804 </span>
              <span class="lg:w-3/4">
                Address: 42, DLF Cyber City, Phase 2, Sector 24, Gurugram, Haryana 122002
              </span>
            </div>
          </div>
          <div class="flex-grow my-10 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>

      <div class="h-[1px] bg-gray mb-5"></div>
      <div
        class="flex flex-col lg:flex-row h-20 justify-center mt-4 text-center md:justify-between md:mt-0"
      >
        <span
          >2025 Dice Solutions <a
            class="underline"
            target="_blank"
            href=""></a
          > 
        </span>
      </div>
    </div>
  </div>
</section>