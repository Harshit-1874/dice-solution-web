---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "Web",
    titleBottom: "Development",
    img: c1,
    alt: "Web Development",
    link: "#",
  },
  {
    index: 2,
    titleTop: "E-commerce",
    titleBottom: "Solutions",
    img: c2,
    alt: "E-commerce Solutions",
    link: "#",
  },
  {
    index: 3,
    titleTop: "AI-Powered",
    titleBottom: "Applications",
    img: c3,
    alt: "AI Applications",
    link: "#",
  },
  {
    index: 4,
    titleTop: "Custom",
    titleBottom: "Platforms",
    img: c4,
    alt: "Custom Platforms",
    link: "#",
  },
  {
    index: 5,
    titleTop: "Content",
    titleBottom: "Creation",
    img: c5,
    alt: "Content Creation",
    link: "#",
  },
  {
    index: 6,
    titleTop: "Marketing",
    titleBottom: "Automation",
    img: c6,
    alt: "Marketing Automation",
    link: "#",
  },
];

const description =
  "At Dice Solutions, we provide a comprehensive range of services to help businesses thrive in the digital world. From web and e-commerce development to AI-powered applications and marketing automation, we deliver innovative solutions tailored to your needs.";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="Services" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>